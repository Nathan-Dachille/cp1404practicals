BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_distance
            text: "1"
            size_hint_x: 0.8
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to km"
        on_press: app.convert()
    Label:
        text: app.output_distance
        color: (1, 1, 0, 1)
